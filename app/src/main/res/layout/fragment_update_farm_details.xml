            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center|start"
                android:text="@string/farmer_information"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{data.haveBvnNumber? View.VISIBLE : View.GONE,default=gone}"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toStartOf="@id/tvBvnNumberValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />


            <!--  BVN Number  -->

            <View
                android:id="@+id/viewBgBvn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:background="@drawable/bg_white_round_6"
                android:backgroundTint="#FBFBFB"
                android:elevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="@id/tvBvnNumberValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvBvnNumberValue" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBvnNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="@dimen/_1sdp"
                android:gravity="center|start"
                android:text="@string/bvn_number"
                android:textColor="@color/textLight"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{data.haveBvnNumber? View.VISIBLE : View.GONE,default=gone}"
                app:layout_constraintBottom_toBottomOf="@id/tvBvnNumberValue"
                app:layout_constraintEnd_toStartOf="@id/tvBvnNumberValue"
                app:layout_constraintStart_toStartOf="@id/viewBgBvn"
                app:layout_constraintTop_toTopOf="@id/tvBvnNumberValue"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBvnNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_1sdp"
                android:gravity="end"
                android:padding="@dimen/_10sdp"
                android:text="@{data.bvnNumber}"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{data.haveBvnNumber? View.VISIBLE : View.GONE,default=gone}"
                app:layout_constraintEnd_toEndOf="@id/viewBgBvn"
                app:layout_constraintStart_toEndOf="@id/tvBvnNumber"
                app:layout_constraintTop_toBottomOf="@id/tvPersonalInformation"
                tools:text="938495834958"
                tools:visibility="visible" />


            <!--  Name  -->
            <View
                android:id="@+id/viewBgName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:background="@drawable/bg_white_round_6"
                android:backgroundTint="#FBFBFB"
                android:layout_marginStart="@dimen/_1sdp"
                android:elevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="@id/tvNameValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvNameValue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/name"
                android:textColor="@color/textLight"
                android:elevation="@dimen/_1sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/tvNameValue"
                app:layout_constraintEnd_toStartOf="@id/tvNameValue"
                app:layout_constraintStart_toStartOf="@id/viewBgName"
                app:layout_constraintTop_toTopOf="@id/tvNameValue"

                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_1sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="end"
                android:text="@{(data.firstName == null? `` : data.firstName) + ` ` + (data.lastName == null? `` : data.lastName)}"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/viewBgName"
                app:layout_constraintStart_toEndOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@id/tvBvnNumberValue"
                tools:text="938495834958"
                tools:visibility="visible" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBiometricCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/farm_photos"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="@id/tvPersonalInformation"
                app:layout_constraintTop_toBottomOf="@id/tvNameValue" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFarmImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvBvnNumber"
                app:layout_constraintTop_toBottomOf="@id/tvBiometricCapture"
                app:spanCount="3"
                tools:itemCount="3" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFarmLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/farm_details"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="@id/tvPersonalInformation"
                app:layout_constraintTop_toBottomOf="@id/rvFarmImages" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCaptureFarmLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#CFD332"
                android:gravity="center"
                android:onClick="@{viewClickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:text="@string/capture_farm_location"
                android:textColor="#24781F"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvBvnNumber"
                app:layout_constraintTop_toBottomOf="@id/tvFarmLocation" />


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/viewMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#F5F5F5"
                app:layout_constraintEnd_toEndOf="@id/tvCaptureFarmLocation"
                app:layout_constraintStart_toStartOf="@id/tvCaptureFarmLocation"
                app:layout_constraintTop_toBottomOf="@id/tvCaptureFarmLocation" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/total_area"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/viewMap"
                app:layout_constraintTop_toBottomOf="@id/viewMap" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSqFt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0sq ft"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/viewMap"
                app:layout_constraintStart_toStartOf="@id/viewMap"
                app:layout_constraintTop_toTopOf="@id/tvTotalArea"
                tools:text="Total Area: 5194.51 sq meters" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUpdateFarmLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#CFD332"
                android:gravity="center"
                android:onClick="@{viewClickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:text="@string/update_farm_location"
                android:textColor="#24781F"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvBvnNumber"
                app:layout_constraintTop_toBottomOf="@id/tvTotalArea" />

            <ProgressBar
                android:id="@+id/progressBarApi"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvUpdateFarmLocation"
                app:layout_constraintEnd_toEndOf="@id/tvUpdateFarmLocation"
                app:layout_constraintTop_toTopOf="@id/tvUpdateFarmLocation" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>