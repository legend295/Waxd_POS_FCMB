            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFarmerBvnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/does_the_farmer_have_bvn"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{isUpdating? View.GONE: View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rgFarmerBvn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onCheckedChanged="@{viewModel.checkChangeListener}"
                android:visibility="@{isUpdating? View.GONE: View.VISIBLE}"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/tvFarmerBvnTxt"
                app:layout_goneMarginStart="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:checked="@{viewModel.request.haveBvnNumber}"
                    android:text="@string/yes"
                    app:buttonTint="@color/radio_item_color" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:checked="@{!viewModel.request.haveBvnNumber}"
                    android:text="@string/no"
                    app:buttonTint="@color/radio_item_color" />
            </RadioGroup>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBvnNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/bvn_number"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{viewModel.request.haveBvnNumber? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintStart_toStartOf="@id/rgFarmerBvn"
                app:layout_constraintTop_toBottomOf="@id/rgFarmerBvn" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEnterBvnNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/enter_bvn_number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.bvnNumber}"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{viewModel.request.haveBvnNumber? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/tvBvnNumber" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFarmerNin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/does_the_farmer_have_nin_number"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{isUpdating? View.GONE: View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etEnterBvnNumber" />

            <RadioGroup
                android:id="@+id/rgFarmerNin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onCheckedChanged="@{viewModel.ninCheckChangeListener}"
                android:visibility="@{isUpdating? View.GONE: View.VISIBLE}"
                app:layout_constraintStart_toStartOf="@id/tvFarmerNin"
                app:layout_constraintTop_toBottomOf="@id/tvFarmerNin">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbYesNin"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:checked="@{viewModel.request.haveNinNumber}"
                    android:text="@string/yes"
                    app:buttonTint="@color/radio_item_color" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbNoNin"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:checked="@{!viewModel.request.haveNinNumber}"
                    android:text="@string/no"
                    app:buttonTint="@color/radio_item_color" />
            </RadioGroup>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNinNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/nin_number"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{viewModel.request.haveNinNumber? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintStart_toStartOf="@id/rgFarmerNin"
                app:layout_constraintTop_toBottomOf="@id/rgFarmerNin" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNinNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/enter_nin_number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.ninNumber}"
                android:textSize="@dimen/_12sdp"
                android:visibility="@{viewModel.request.haveNinNumber? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/tvNinNumber" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPersonalInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/personal_information"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@id/rgFarmerBvn"
                app:layout_constraintTop_toBottomOf="@id/etNinNumber" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.firstName}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/tvPersonalInformation" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/last_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.lastName}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etFirstName" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/phone_number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.phoneNumber}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etLastName" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/email_address"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.email}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etPhoneNumber" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/dd_mm_yyyy"
                android:onClick="@{viewClickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:text="@{viewModel.request.dob}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etEmailAddress" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.address}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/tvDob" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/city"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.city}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etAddress" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="@string/state"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/_10sdp"
                android:text="@={viewModel.request.state}"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvFarmerBvnTxt"
                app:layout_constraintTop_toBottomOf="@id/etCity" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#C5C4C4"
                android:gravity="center"
                android:onClick="@{viewClickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:text="@string/cancel"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tvCreateFarmerProfile"
                app:layout_constraintStart_toStartOf="@id/tvBvnNumber"
                app:layout_constraintTop_toBottomOf="@id/etState" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCreateFarmerProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:backgroundTint="#42BC9E"
                android:gravity="center"
                android:onClick="@{viewClickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:text="@{isUpdating? @string/update_farmer : @string/create_farmer_profile}"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvCancel"
                app:layout_constraintTop_toBottomOf="@id/etState" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvCreateFarmerProfile"
                app:layout_constraintEnd_toEndOf="@id/tvCreateFarmerProfile"
                app:layout_constraintTop_toTopOf="@id/tvCreateFarmerProfile" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
